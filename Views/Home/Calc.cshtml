@{
    ViewBag.Title = "Grade Calculator: IS 413";
}

@model Assignment_2_Josiah_Sarles.Models.CalcModel 

<body onload="onLoad()">
    <div class="content row">
        <div class="column">
            <div class="pad">

            </div>
        </div class="column">
        <div class="column">
            <div class="pad ex_pad">
                <h2>Grade Calculator</h2>
                <form method="post">
                    <label for="">Assignments:</label>
                    <input type="number" asp-for="assignment" id="assignment" class="input" required>
                    <label for="">/50%</label>
                    <br><br>

                    <label for="">Group Projects:</label>
                    <input type="number" asp-for="group" id="group" class="input" required>
                    <label for="">/10%</label>
                    <br><br>

                    <label for="">Quizzez:</label>
                    <input type="number" asp-for="quiz" id="quiz" class="input" required onkeypress="">
                    <label for="">/10%</label>
                    <br><br>

                    <label for="">Exams:</label>
                    <input type="number" asp-for="exam" id="exam" class="input" required>
                    <label for="">/20%</label>
                    <br><br>

                    <label for="">INTEX:</label>
                    <input type="number" asp-for="intex" id="intex" class="input" required>
                    <label for="">/10%</label>
                    <br><br>

                    <input type="submit" id="btn1" value="CALCULATE"><br><br>
                    <input type="button" id="resetbtn" value="RESET"><br><br>
                    <div asp-validation-summary="All">

                    </div>
                </form>
            </div>
        </div>
        <div class="column">
            <div class="pad">
                <h2>GPA Results</h2>
                <div>
                    <svg height="100" width="100" id="svg" class="svg_center">
                        <circle id="myCircle" cx="50" cy="50" r="40" stroke="black" stroke-width="3" fill="none"
                                display="none" />
                    </svg>
                    <br>
                    <p id="results" class="text_results"></p>
                </div>
            </div>
        </div>
     </div>
</body>